extends ../_layouts/master

append body-content
  .row
    .right
      md-button.md-primary.right(href='/admin/question/create')
        i.fa.fa-plus
        | &nbsp;&nbsp;
        span New Question
    .clearfix
  .row
    md-table-container
      table(md-table).questions
        - if (!questions || !questions.length)
          thead(md-head)
            tr(md-row)
              th(md-column)
                span Questions
          tbody(md-body)
            tr(md-row)
              td(md-cell)
                .text-center
                  span There aren't any questions currently. Get started by&nbsp;
                  a(href='/admin/question/create') creating a new survey question
                  span .
        - else
            thead(md-head)
              tr(md-row)
                th(colspan='3', md-column)
                  span Questions
            tbody(md-body)
              - for q in questions
                tr(md-row)
                  td(md-cell) #{q.text}
                  td(md-cell, width='100').text-center
                    a(href='/admin/question/#{q.key}/results') Responses
                  td(md-cell, width='100').text-center
                    a(href='/admin/question/#{q.key}') Edit
                    span &nbsp;|&nbsp;
                    a(href='#') Delete

